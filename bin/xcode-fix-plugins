#!/bin/sh

plugins_path=~/Library/Application\ Support/Developer/Shared/Xcode/Plug-ins

for plugin in "$plugins_path"/*; do
  for xcode in /Applications/Xcode*; do
    uuid=$(defaults read "$xcode/Contents/Info" DVTPlugInCompatibilityUUID)
    defaults write "$plugin/Contents/Info" DVTPlugInCompatibilityUUIDs -array-add "$uuid"
  done
done
