[alias]
  a = add
  p = push
  pushf = push --force-with-lease
  aa = add -A
  ap = add --patch
  co = checkout
  cp = cherry-pick
  mg = merge --ff-only
  s = status
  ci = commit
  ca = commit --amend
  br = branch
  df = difftool
  dfs = difftool --staged
  l = log
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  st = stash
  stu = stash -u --keep-index
  stl = stash list
  stp = stash pop
  std = stash drop
  alias = config --get-regexp 'alias.*'
  rb = rebase
  rbi = rebase --interactive
  rbc = rebase --continue

